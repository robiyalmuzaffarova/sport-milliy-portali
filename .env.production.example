# Production Environment Configuration - EXAMPLE
# Copy this to .env.production and fill in actual values
# NEVER commit .env.production to version control

# ============================================================================
# APP Configuration
# ============================================================================
APP_NAME=Sport Milliy Portali
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO
ENVIRONMENT=production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://sportuser:sportpass@postgres:5432/sportdb_prod
SQLALCHEMY_ECHO=False
DB_POOL_SIZE=20
DB_POOL_MAX_OVERFLOW=10

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=change-me-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Change default admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-to-strong-password
DOCS_USERNAME=admin
DOCS_PASSWORD=change-me-to-strong-password

# ============================================================================
# CORS & DOMAIN CONFIGURATION
# ============================================================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Sport Milliy Portali

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://:sportpass@redis:6379/0
REDIS_PASSWORD=change-this-password

# ============================================================================
# CELERY CONFIGURATION
# ============================================================================
CELERY_BROKER_URL=amqp://sportuser:sportpass@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://:sportpass@redis:6379/1

# ============================================================================
# RABBITMQ CONFIGURATION
# ============================================================================
RABBITMQ_USER=sportuser
RABBITMQ_PASSWORD=change-this-password

# ============================================================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================================================
# Click Payment
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SERVICE_ID=your-click-service-id
CLICK_SECRET_KEY=your-click-secret-key

# Payme Payment
PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
TRANSLATION_SERVICE=google
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
